{{#if addNewQuestion}}
  <h3>New Question</h3>
  <div>
    <form>
      <div class="form-group">
        <div class="form-group">
          <label for="title">Title:</label>
          {{input value=title id="title"}}
        </div>

        <label for="author">Author:</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Content:</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes:</label>
        {{input value=notes id="notes"}}
      </div>

      <div class="form-group">
        <label for="date">Date:</label>
        {{input type="date" value=date id="date"}}
      </div>

      <button class="btn btn-success" {{action 'saveQuestion'}}>Add Question</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
